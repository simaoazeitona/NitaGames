    </style>

    <style name="Theme.MyApp.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Fundo preto -->
        <item name="android:windowSplashScreenBackground">@android:color/black</item>

        <!-- Tira ícone do splash -->
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@null</item>

        <!-- Remove tudo o que possa meter logo/ícone -->
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>
